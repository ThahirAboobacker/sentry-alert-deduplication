# SuperOps API Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# SUPEROPS API CREDENTIALS
# ===========================================
# Get these from your SuperOps account settings
SUPEROPS_API_KEY=your_superops_api_key_here
SUPEROPS_ORG_ID=your_organization_id_here
SUPEROPS_API_URL=https://api.superops.com/v1

# ===========================================
# OPERATION MODE
# ===========================================
# LIVE = Use real SuperOps API
# DEMO = Use simulated data (perfect for presentations)
SUPEROPS_MODE=DEMO

# Auto-detect mode based on credentials
SUPEROPS_AUTO_DETECT=true

# Fallback to demo mode if live mode fails
SUPEROPS_FALLBACK_DEMO=true

# ===========================================
# API CONFIGURATION
# ===========================================
# Request timeout in milliseconds
SUPEROPS_TIMEOUT=30000

# Number of retry attempts for failed requests
SUPEROPS_RETRY_ATTEMPTS=3

# Delay between retries in milliseconds
SUPEROPS_RETRY_DELAY=1000

# Rate limiting (requests per minute)
SUPEROPS_RATE_LIMIT=60
SUPEROPS_BURST_LIMIT=10

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
# Secret key for webhook signature verification
SUPEROPS_WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# ALERT PROCESSING
# ===========================================
# Maximum number of alerts to fetch in one request
SUPEROPS_BATCH_SIZE=100

# Maximum age of alerts to process (in seconds)
SUPEROPS_MAX_ALERT_AGE=86400

# ===========================================
# TICKET CREATION
# ===========================================
# Auto-assign tickets to a specific user
SUPEROPS_AUTO_ASSIGN=false
SUPEROPS_DEFAULT_ASSIGNEE=

# ===========================================
# DEMO CONFIGURATION
# ===========================================
# Number of alerts in demo scenario
DEMO_ALERT_COUNT=25

# Target noise reduction percentage
DEMO_REDUCTION_TARGET=85

# Processing delay for demo effect (milliseconds)
DEMO_PROCESSING_DELAY=500

# ===========================================
# LOGGING
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed API request/response logging
SUPEROPS_API_LOGGING=true

# Enable metrics collection
SUPEROPS_METRICS=true

# ===========================================
# SUPERHACK 2025 CONFIGURATION
# ===========================================
# Your hackathon team information
HACKATHON_TEAM_NAME=Team Sentry
HACKATHON_SUBMISSION_ID=

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port for the Express server
PORT=3000

# Node environment
NODE_ENV=development